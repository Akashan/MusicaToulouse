{# src/Carnaval/WebsiteBundle/Resources/views/Website/index.html.twig #}
 
{% extends "::layout.html.twig" %}
 
{% block title %}
    {{ parent() }} - Admin - Catégories
{% endblock %}
 
{% block carnaval_contenu %}
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th colspan="2">Catégories</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.name }}</td>
                <td style="width: 20%">
                    <div class="btn-group">
                        <a class="btn btn-warning" href="{{ path('musica_toulouse_website_adm_categorie_modifier', {'id': categorie.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('musica_toulouse_website_adm_categorie_supprimer', {'id': categorie.id}) }}">Supprimer</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}