{% extends "::layout.html.twig" %}

{% block title %}
  Admin - Ajout Catégorie - {{ parent() }}
{% endblock %}

{% block carnaval_contenu %}
    <form class="form-horizontal well" id="formulaire" method="post" name={{ formName }} {{ form_enctype(form) }}>
        <fieldset>
            <legend style="color:#fff;">Ajouter une Catégorie</legend>
            {{ form_widget(form) }}
            <br />
            <input type="submit" class="btn btn-primary" />
            <input name="cancel" class="btn" type="submit" value="Cancel" formnovalidate/>
        </fieldset>
    </form>

{% endblock %}